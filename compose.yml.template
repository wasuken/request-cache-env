version: "3"

services:
  app:
    build:
      context: .
    ports:
      - "3000:3000"
    environment:
      TZ: "Asia/Tokyo"
    volumes:
      - ./src:/app
      - node_modules:/app/node_modules
    # command: sh -c "npm run build && npm start"
    # command: sh -c "npm run build && npm start"
    # command: sh -c "npm run dev"
    depends_on:
      - mysql
    networks:
      - my_network
  mysql:
    image: mysql:latest
    environment:
      MYSQL_ROOT_PASSWORD: mysql
      MYSQL_DATABASE: rcache
      MYSQL_USER: user
      MYSQL_PASSWORD: password
    volumes:
      - ./mysql/init:/docker-entrypoint-initdb.d
      - ./mysql/conf/my.cnf:/etc/mysql/conf.d/my.cnf
    restart: always
    networks:
      - my_network
  cron:
    build:
      context: ./cron
    networks:
      - my_network
  phpmyadmin:
    image: phpmyadmin:latest
    restart: always
    ports:
      - 8080:80
    environment:
      - PMA_ARBITRARY=1
      - PMA_HOST=mysql
      - PMA_USER=root
      - PMA_PASSWORD=mysql

volumes:
  node_modules:

networks:
  my_network:
    driver: bridge
